<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>

            <item android:drawable="@drawable/ic_google_auth"
                android:height="36dp"
                android:width="36dp"
                android:gravity="center_vertical"
                android:left="86dp"/>

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp"/>
                    <size android:width="306dp" android:height="68dp"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <item android:drawable="@drawable/ic_google_auth"
                android:height="36dp"
                android:width="36dp"
                android:gravity="center_vertical"
                android:left="86dp"/>

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp"/>
                    <size android:width="306dp" android:height="68dp"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp"/>
                    <size android:width="306dp" android:height="68dp"/>
                    <corners android:radius="10dp"/>
                    <solid android:color="@color/auth_button_pressed"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>