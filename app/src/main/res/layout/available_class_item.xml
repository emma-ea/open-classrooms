<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/available_background"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:background="@drawable/available_class_item_background"
    android:layout_marginBottom="21dp">

    <TextView
        android:id="@+id/classroom_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FF1"
        style="@style/textFont"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toTopOf="@id/classroom_view_count"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/classroom_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewed by 6 others"
        android:layout_margin="14dp"
        android:fontFamily="@font/lato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ic_class_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="9dp"
        android:src="@drawable/ic_assessment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>