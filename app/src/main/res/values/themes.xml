<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OCR" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="progressStyle" parent="Theme.OCR">
        <item name="colorSecondaryVariant">@color/auth_button_pressed</item>
        <item name="colorSecondary">@color/auth_button_pressed</item>
        <item name="android:colorAccent">@color/auth_button_pressed</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="textFont" parent="Theme.OCR">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>